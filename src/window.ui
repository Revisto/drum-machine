<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="DrumMachineWindow" parent="AdwApplicationWindow">
    <style>
      <class name="adw-window"/>
    </style>
    <property name="default-width">1000</property>
    <property name="default-height">800</property>
    <property name="width-request">360</property>
    <property name="height-request">420</property>
    <child>
        <object class="AdwBreakpoint">
            <condition>max-width: 890px or max-height: 625px</condition>
            <setter object="drum_machine_box" property="css-classes">drum-machine-box
medium</setter>
        </object>
    </child>
    <child>
        <object class="AdwBreakpoint">
            <condition>max-width: 740px or max-height: 560px</condition>
            <setter object="drum_machine_box" property="css-classes">drum-machine-box
compact</setter>
        </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 500px</condition>
        <setter object="drum_machine_box" property="css-classes">drum-machine-box
compact
half-view</setter>
      </object>
    </child>
    <child>
      <object class="AdwBreakpoint">
          <condition>max-width: 395px</condition>
          <setter object="drum_machine_box" property="css-classes">drum-machine-box
compact
half-view</setter>
          <setter object="bpm_label" property="visible">false</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">
        <child>
          <object class="AdwToolbarView">
            <child type="top">
              <object class="AdwHeaderBar" id="header_bar">
                <child type="start">
                  <object class="AdwSplitButton" id="file_pattern_button">
                    <property name="label" translatable="yes">Open…</property>
                    <property name="use-underline">True</property>
                    <property name="tooltip-text" translatable="yes">Open Pattern</property>
                    <property name="menu-model">pattern_menu</property>
                    <accessibility>
                      <property name="label" translatable="yes" context="accessibility">Open Pattern</property>
                      <property name="description" translatable="yes">Open Saved Drum Pattern</property>
                    </accessibility>
                  </object>
                </child>
                <menu id="pattern_menu">
                  <section>
                    <!-- Patterns will be added here programmatically -->
                  </section>
                </menu>
                <child type="title">
                  <object class="AdwWindowTitle">
                    <property name="title" translatable="yes">Drum Machine</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkMenuButton" id="menu_button">
                    <property name="icon-name">open-menu-symbolic</property>
                    <property name="menu-model">primary_menu</property>
                    <property name="tooltip-text" translatable="yes">Main Menu</property>
                    <accessibility>
                      <property name="label" translatable="yes" context="accessibility">Main Menu</property>
                      <property name="description" translatable="yes">Access Keyboard Shortcuts and Application Information</property>
                    </accessibility>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton" id="export_audio_button">
                    <property name="icon-name">share-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Export Audio…</property>
                    <style>
                      <class name="export-button"/>
                    </style>
                    <accessibility>
                      <property name="label" translatable="yes" context="accessibility">Export Audio…</property>
                      <property name="description" translatable="yes">Export Current Drum Pattern as Audio File</property>
                    </accessibility>
                  </object>
                </child>

              </object>
            </child>
            <property name="content">
              <object class="GtkBox" id="outer_box">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkScrolledWindow">
                    <property name="vexpand">true</property>
                    <property name="hexpand">true</property>
                    <child>
                      <object class="GtkBox" id="drum_machine_box">
                          <property name="orientation">vertical</property>
                          <property name="spacing">12</property>
                          <property name="halign">center</property>
                          <property name="valign">center</property>
                          <property name="margin-start">12</property>
                          <property name="margin-end">12</property>
                          <property name="margin-top">12</property>
                          <property name="margin-bottom">12</property>
                          <property name="css-classes">drum-machine-box</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
            <child type="bottom">
              <object class="GtkBox" id="bottom_wrapper">
                <property name="css-classes">bottom-wrapper</property>
                <property name="hexpand">true</property>
                <child>
                  <!-- Left aligned BPM controls -->
                  <object class="GtkBox" id="bpm_box">
                    <property name="halign">start</property>
                    <property name="valign">center</property>
                    <property name="spacing">6</property>
                    <property name="margin-start">12</property>
                    <child>
                      <object class="GtkLabel" id="bpm_label">
                        <property name="valign">center</property>
                        <property name="label" translatable="yes">BPM</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkSpinButton" id="bpm_spin_button">
                        <property name="tooltip-text" translatable="yes">Adjust Tempo In Beats per Minute (BPM)</property>
                        <property name="valign">center</property>
                        <accessibility>
                          <property name="label" translatable="yes">Tempo</property>
                          <property name="description" translatable="yes">Adjust Tempo In Beats per Minute (BPM)</property>
                        </accessibility>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">30</property>
                            <property name="upper">300</property>
                            <property name="step-increment">1</property>
                            <property name="page-increment">10</property>
                            <property name="value">120</property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <!-- Center box for play/pause and volume -->
                  <object class="GtkBox">
                    <property name="hexpand">true</property>
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="spacing">12</property>
                    <child>
                      <object class="GtkButton" id="play_pause_button">
                        <property name="width-request">60</property>
                        <property name="height-request">60</property>
                        <property name="icon-name">media-playback-start-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Play</property>
                        <property name="valign">center</property>
                        <style>
                          <class name="circular"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScaleButton" id="volume_button">
                        <property name="valign">center</property>
                        <property name="icons">audio-volume-muted-symbolic
audio-volume-high-symbolic
audio-volume-low-symbolic
audio-volume-medium-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Adjust Volume</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">0</property>
                            <property name="upper">100</property>
                            <property name="step-increment">1</property>
                            <property name="page-increment">5</property>
                            <property name="value">100</property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <!-- Right aligned reset button -->
                  <object class="GtkBox" id="reset_box">
                    <property name="halign">end</property>
                    <property name="valign">center</property>
                    <property name="margin-end">12</property>
                    <child>
                      <object class="GtkButton" id="clear_button">
                        <property name="valign">center</property>
                        <property name="label" translatable="yes">Reset</property>
                        <property name="tooltip-text" translatable="yes">Reset the Drum Sequence</property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Add Samples…</attribute>
        <attribute name="action">win.add_samples</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Save Pattern…</attribute>
        <attribute name="action">win.save_pattern</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Drum Machine</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
