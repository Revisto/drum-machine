<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="AudioExportProgressDialog" parent="AdwDialog">
    <property name="content-width">400</property>
    <property name="title" translatable="yes">Exporting Audio</property>
    <property name="can-close">true</property>
    <property name="child">
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-title">true</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="orientation">1</property>
            <property name="halign">3</property>
            <property name="spacing">12</property>
            <property name="margin-top">24</property>
            <property name="margin-bottom">24</property>
            <property name="margin-start">24</property>
            <property name="margin-end">24</property>
            <child>
              <object class="GtkProgressBar" id="progress_bar">
                <property name="show-text">true</property>
                <property name="margin-bottom">12</property>
                <property name="width-request">300</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="status_label">
                <property name="label" translatable="yes">Preparing export...</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="detail_label">
                <property name="label" translatable="yes">This may take a few moments...</property>
                <property name="margin-bottom">12</property>
                <style>
                  <class name="dim-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
