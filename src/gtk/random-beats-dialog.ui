<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="RandomBeatsDialog" parent="AdwDialog">
    <property name="content-width">420</property>
    <property name="title" translatable="yes">Random Beats</property>
    <property name="child">
      <object class="AdwToolbarView" id="toolbar_view">
        <child type="top">
          <object class="AdwHeaderBar" id="header_bar">
            <property name="show-title">true</property>
          </object>
        </child>
        <property name="content">
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="propagate-natural-height">true</property>
            <child>
              <object class="GtkBox" id="content_box">
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                <child>
                  <object class="AdwPreferencesGroup" id="settings_group">
                <property name="title" translatable="yes">Randomization</property>
                <property name="description" translatable="yes">Choose how dense you want the beats</property>
                <child>
                  <object class="AdwActionRow" id="density_row">
                    <property name="title" translatable="yes">Density</property>
                    <property name="subtitle" translatable="yes">Percentage of active beats</property>
                    <child>
                      <object class="GtkLabel" id="density_value_label">
                        <property name="label">50%</property>
                        <property name="halign">end</property>
                        <property name="valign">center</property>
                        <style>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScale" id="density_scale">
                        <property name="hexpand">true</property>
                        <property name="valign">center</property>
                        <property name="draw-value">false</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">0</property>
                            <property name="upper">100</property>
                            <property name="step-increment">1</property>
                            <property name="page-increment">10</property>
                            <property name="value">50</property>
                          </object>
                        </property>
                        <signal name="value-changed" handler="_on_density_changed"/>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwActionRow" id="pages_row">
                    <property name="title" translatable="yes">Pages</property>
                    <property name="subtitle" translatable="yes">Number of pages to fill</property>
                    <child>
                      <object class="GtkSpinButton" id="pages_spin_button">
                        <property name="valign">center</property>
                        <property name="tooltip-text" translatable="yes">Pages to generate</property>
                        <property name="adjustment">
                          <object class="GtkAdjustment">
                            <property name="lower">1</property>
                            <property name="upper">16</property>
                            <property name="step-increment">1</property>
                            <property name="page-increment">1</property>
                            <property name="value">1</property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwPreferencesGroup" id="per_part_group">
                <property name="title" translatable="yes">Per-instrument density</property>
                <property name="description" translatable="yes">Override density per drum part</property>
